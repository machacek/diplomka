#!/bin/bash
# eman seed for compiling mgiza

function die() { echo "$@" >&2; exit 1; }
set -o pipefail  # safer pipes

# no vars
touch eman.vars

cat > eman.command << KONEC
#!/bin/bash
echo "=============================="
echo "== Started:   "\`date '+%Y%m%d-%H%M'\`
echo "== Hostname:  "\`hostname\`
echo "== Directory: "\`pwd\`
echo "=============================="
mydir=\$(pwd)
set -o pipefail
function die() { echo "\$@" >&2 ; eman fail \$mydir ; exit 1 ; }
renice 10 \$\$
ulimit -c 1 # core files limited to 1 byte


tar xzf ../../src/mgizapp-0.6.3.tar.gz || die "mgiza missing"
cd mgizapp || die "Failed to chdir to mgizapp"
patch -p1 < ../../../src/mgizapp-0.6.3.patch-for-gzipped-files \
  || die "Failed to patch mgiza"
./configure || die "Failed to configure"
make || die "Failed to make"
cd ../ || die "chdir back failed"

mkdir -p bin || die "Can't make bindir"
ln -s ../mgizapp/src/mgiza ../mgizapp/src/snt2cooc.out \
   ../mgizapp/src/mkcls ../mgizapp/src/symal bin/

# Standard command footer
echo Done.
eman succeed \$mydir
echo "=============================="
echo "== Ended:     "\`date '+%Y%m%d-%H%M'\`
echo "== Hostname:  "\`hostname\`
echo "== Directory: "\`pwd\`
echo "=============================="
KONEC
